@{
    ViewData["Title"] = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    #openModalBtn {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s, transform 0.3s;
    }

        #openModalBtn:hover {
            background-color: #45a049;
        }

        #openModalBtn:active {
            transform: scale(0.98);
        }

        #openModalBtn:focus {
            outline: none;
        }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0, 0, 0);
        background-color: rgba(0, 0, 0, 0.4);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 10% auto;
        padding: 1px;
        border: 1px solid #888;
        width: 100%;
        max-width: 800px;
        height: 100%;
        max-height: 590px;
        overflow-y: auto;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

    .modal-body ul {
        list-style-type: none;
        padding: 0;
    }

    .modal-body li {
        padding: 10px;
        border-bottom: 1px solid #ddd;
        cursor: pointer;
    }

        .modal-body li:hover {
            background-color: #f1f1f1;
        }

    .modal-body button {
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
    }

        .modal-body button:hover {
            background-color: #45a049;
        }

    .select_addrees {
        margin-bottom: 6px;
    }

        .select_addrees p {
            color: #111111;
            margin-bottom: 12px;
        }

    .select_addrees {
        height: 50px;
        width: 100%;
        border: 1px solid black;
        font-size: 14px;
        color: black;
        padding-left: 20px;
        margin-bottom: 20px;
    }

    /* Style for radio buttons */
    .checkout__input__radio {
        position: relative;
        padding-left: 35px;
        margin-bottom: 12px;
        cursor: pointer;
        font-size: 16px;
        display: block;
    }

        .checkout__input__radio input {
            position: absolute;
            opacity: 0;
            cursor: pointer;
        }

            .checkout__input__radio input:checked ~ .checkmark {
                background-color: red;
            }

        .checkout__input__radio .checkmark {
            position: absolute;
            top: 0;
            left: 0;
            height: 20px;
            width: 20px;
            border: 2px solid #2196F3;
            border-radius: 4px;
            background-color: #eee;
        }

        .checkout__input__radio input:checked ~ .checkmark:after {
            display: block;
        }

        .checkout__input__radio .checkmark:after {
            content: "";
            position: absolute;
            display: none;
        }

        .checkout__input__radio input:checked ~ .checkmark:after {
            left: 7px;
            top: 4px;
            width: 5px;
            height: 10px;
            border: solid white;
            border-width: 0 3px 3px 0;
            transform: rotate(45deg);
        }

    @@media only screen and (min-width: 1200px) {
        .container {
            max-width: 1470px;
        }
    }
</style>
