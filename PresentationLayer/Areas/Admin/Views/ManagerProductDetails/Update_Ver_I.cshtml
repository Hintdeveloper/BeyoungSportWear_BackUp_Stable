@{
    ViewData["Title"] = "Update_Ver_I";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}
<style>

    .form-group {
        margin-bottom: 10px;
    }

    .form-control, .form-control-sm, .form-select, .form-select-sm {
        border-radius: 0.25rem;
    }


    .added-items {
        margin-top: 10px;
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    .table {
        margin-top: 15px;
        width: 100%;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .no-data {
        text-align: center;
        color: #888;
    }

    .buttons {
        margin-top: 15px;
        text-align: center;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .d-flex {
        display: flex;
        align-items: center;
    }

    .me-2 {
        margin-right: 0.5rem;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-group input, .form-group select {
        width: 100%;
    }


    .modal-dialog {
        max-width: 20%;
    }

    .modal-body img {
        width: 100%;
        height: auto;
    }

    .image-preview {
        display: flex;
        flex-wrap: nowrap;
        overflow-x: auto;
        max-width: 100%;
    }

    .image-preview-item {
        position: relative;
        margin-right: 10px;
        margin-bottom: 10px;
        max-width: 150px;
    }

        .image-preview-item img {
            max-width: 100%;
            max-height: 150px;
            border: 1px solid #ccc;
            padding: 5px;
        }

        .image-preview-item .remove-image {
            position: absolute;
            top: 5px;
            right: 5px;
            cursor: pointer;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 50%;
            padding: 5px;
        }

            .image-preview-item .remove-image:hover {
                background-color: rgba(255, 0, 0, 0.8);
                color: white;
            }

    .custom-file-wrapper {
        position: relative;
        display: inline-block;
        width: 100%;
    }

    .custom-file-input {
        position: relative;
        z-index: 2;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
    }

    .custom-file-icon {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
        width: 100%;
        height: 100%;
        padding: 10px 15px;
        pointer-events: none;
        background-color: white;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        color: #495057;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .custom-file-icon i {
            margin-right: 5px;
        }

    .custom-file-wrapper:hover .custom-file-icon {
        background-color: #e9ecef;
    }

</style>

<div class="app-title">
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item">Danh sách sản phẩm</li>
        <li class="breadcrumb-item"><a href="#">Sửa sản phẩm</a></li>
    </ul>
    <div id="clock"></div>
</div>

<form>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <label for="keycode">Mã sản phẩm</label>
                    <input class="form-control" id="keycode" readonly />
                </div>
                <div class="col-md-6">
                    <label for="product_name">Tên sản phẩm</label>
                    <input class="form-control" id="product_name" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label for="product_category">Danh mục</label>
                    <select class="form-control" id="product_category">
                        <option>-- Chọn danh mục --</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="category_name">Tên danh mục</label>
                    <input class="form-control" id="category_name" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="product_manufacture">Nhà sản xuất</label>
                    <select class="form-control" id="product_manufacture">
                        <option>-- Chọn nhà sản xuất --</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="manufacture_name">Tên nhà sản xuất</label>
                    <input class="form-control" id="manufacture_name" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <label for="product_material">Chất liệu</label>
                    <select class="form-control" id="product_material">
                        <option>-- Chọn chất liệu --</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="material_name">Tên chất liệu</label>
                    <input class="form-control" id="material_name" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="product_brand">Thương hiệu</label>
                    <select class="form-control" id="product_brand">
                        <option>-- Chọn thương hiệu --</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="brand_name">Tên thương hiệu</label>
                    <input class="form-control" id="brand_name" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="Style">Phong cách</label>
            <input type="text" class="form-control" id="Style" placeholder="Nhập phong cách">
        </div>
        <div class="col-md-6">
            <label for="Origin">Nguồn gốc</label>
            <input type="text" class="form-control" id="Origin" placeholder="Nhập nguồn gốc">
        </div>
    </div>
    <div class="form-group">
        <label for="Description">Mô tả</label>
        <textarea class="form-control" id="Description" rows="3" placeholder="Nhập mô tả"></textarea>
    </div>

    <div class="form-group">
        <div class="custom-file-wrapper">
            <input type="file" class="form-control custom-file-input" id="ImagePaths" multiple>
            <span class="custom-file-icon">
                <i class="fas fa-camera"></i> Thêm ảnh
            </span>
        </div>
        <div class="image-preview" id="imagePreview">
            <!-- Các ảnh xem trước sẽ được thêm vào đây -->
        </div>
    </div>


    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-body">
                    <img id="modalImage" src="" class="img-fluid" alt="Image preview">
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label for="color">Màu (Tùy chỉnh)</label>
                <div class="d-flex">
                    <select id="colorSelect" class="form-control me-2">
                        <option value="">Chọn màu</option>
                    </select>
                    <input type="text" id="color" class="form-control me-2" placeholder="Nhập màu">
                    <button type="button" id="addColorButton" class="btn btn-primary">+</button>
                </div>
                <div class="added-items" id="addedColors">
                </div>
            </div>
            <div class="col-md-6">
                <label for="size">Kích cỡ (Tùy chỉnh)</label>
                <div class="d-flex">
                    <select id="sizeSelect" class="form-control me-2">
                        <option value="">Chọn kích cỡ</option>
                    </select>
                    <input type="text" id="size" class="form-control me-2" placeholder="Nhập kích cỡ">
                    <button type="button" id="addSizeButton" class="btn btn-primary">+</button>
                </div>
                <div class="added-items" id="addedSizes">
                </div>
            </div>
        </div>
    </div>

    <table id="classificationTable" class="table table-striped">
        <thead>
            <tr>
                <th>Hình ảnh</th>
                <th>Màu</th>
                <th>Size</th>
                <th>Giá bán</th>
                <th>Số lượng</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody id="classificationBody">
            <tr>
                <td class="no-data" colspan="6">Không có dữ liệu</td>
            </tr>
        </tbody>
    </table>

    <div class="form-group text-center">
        <button type="button" id="btn_success_update" class="btn btn-primary">Lưu</button>
    </div>
</form>

<script type="text/javascript" src="~/ajax/admin_staff/product/productdetails_update_verI.js"></script>
