@model BusinessLogicLayer.Viewmodels.Category.CategoryUpdateVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<h1>Sửa thông tin danh mục sản phẩm</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="editForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên danh mục</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Trạng thái</label>
                <select asp-for="Status" class="form-control">
                    <option value="0">Không hoạt động</option>
                    <option value="1">Hoạt động</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-link">Trở về</a>
</div>
<script>
    document.getElementById("editForm").addEventListener("submit", function (event) {
        event.preventDefault(); // Ngăn chặn hành vi mặc định của form

        Swal.fire({
            title: 'Bạn có chắc chắn muốn sửa thông tin danh mục hàng này?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'OK',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.isConfirmed) {
                // Tạo FormData từ form
                var formData = new FormData(this);

                // Tạo một yêu cầu XHR mới
                var xhr = new XMLHttpRequest();
                xhr.open("POST", '@Url.Action("Edit")', true);

                xhr.onload = function () {
                    if (xhr.status >= 200 && xhr.status < 300) {
                        var response = JSON.parse(xhr.responseText);

                        if (response.isSuccess) { // Giả sử phản hồi có cấu trúc với thuộc tính isSuccess
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công!',
                                text: 'Danh mục hàng đã được cập nhật thành công'
                            }).then(() => {
                                window.location.href = '@Url.Action("Index")';
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Lỗi!',
                                text: 'Đã xảy ra lỗi: ' + response.errorMessage || 'Có lỗi xảy ra khi cập nhật danh mục hàng.'
                            });
                        }
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi!',
                            text: xhr.responseText || 'Có lỗi xảy ra khi gửi yêu cầu.'
                        });
                    }
                };

                xhr.onerror = function () {
                    // Hiển thị lỗi nếu có vấn đề xảy ra trong quá trình gửi yêu cầu
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: 'Có lỗi xảy ra khi gửi yêu cầu.'
                    });
                };

                // Gửi yêu cầu với dữ liệu từ form
                xhr.send(formData);
            }
        });

    });

</script>

