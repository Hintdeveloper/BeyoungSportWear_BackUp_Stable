@{
    ViewData["Title"] = "Đơn hàng đã được xử lý";
    Layout = null;
}
<style>
    /* Đặt kiểu cho toàn bộ trang */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        color: #333;
        margin: 0;
        padding: 0;
    }

    /* Đặt kiểu cho container chính */
    .container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Đặt kiểu cho tiêu đề */
    h1 {
        font-size: 2.5rem;
        color: #4CAF50; /* Màu xanh lá cây cho tiêu đề */
        margin-bottom: 20px;
    }

    /* Đặt kiểu cho đoạn văn */
    p {
        font-size: 1.2rem;
        margin-bottom: 30px;
    }

    /* Đặt kiểu cho các nút */
    .btn {
        display: inline-block;
        font-size: 1rem;
        padding: 10px 20px;
        margin: 5px;
        border-radius: 5px;
        text-decoration: none;
        text-align: center;
        cursor: pointer;
    }

    /* Đặt kiểu cho nút chính */
    .btn-primary {
        background-color: #007bff;
        color: #ffffff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Đặt kiểu cho nút phụ */
    .btn-secondary {
        background-color: #6c757d;
        color: #ffffff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #343a40;
        }

    /* Đặt kiểu cho căn giữa */
    .text-center {
        text-align: center;
    }

</style>
<div class="container">
    <h1 class="text-center">Cảm ơn bạn!</h1>
    <p class="text-center">Đơn hàng của bạn đã được xử lý thành công. Cảm ơn bạn đã sử dụng dịch vụ của chúng tôi.</p>
    <div class="text-center">
        <p class="btn btn-primary">Đơn hàng đã được tạo thành công, vui lòng kiểm tra tại quản lý đơn hàng</p>
    </div>
</div>
