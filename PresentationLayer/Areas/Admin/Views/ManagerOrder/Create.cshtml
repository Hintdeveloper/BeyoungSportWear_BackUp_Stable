@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}
<style>
    .custom-modal-auto {
        max-width: 70%; /* Thiết lập chiều rộng tối đa */
        margin: auto; /* Để canh giữa */
        overflow-y: auto; /* Cho phép thanh cuộn nếu nội dung quá dài */
    }
        .custom-modal-auto .modal-dialog {
            max-width: 80%;
        }

    .modal-body {
        padding: 50px;
    }

    .modal-header {
        background-color: #007bff; /* Màu nền */
        color: #fff; /* Màu chữ */
        border-bottom: none; /* Loại bỏ viền dưới */
    }

    .close {
        color: #fff;
        opacity: 1; 
    }

    /* Thanh cuộn bên trong modal (nếu cần) */
    .modal-body {
        overflow-y: auto; /* Hiển thị thanh cuộn nếu nội dung quá dài */
    }

    /* Hình ảnh sản phẩm */
    .img-fluid {
        max-width: 100%; /* Hình ảnh sẽ không vượt quá phần tử chứa */
        height: auto; /* Đảm bảo tỷ lệ khung hình không bị biến dạng */
    }
    /* Phần bảng thông tin chi tiết sản phẩm */
    .product-details-table {
        margin-top: 20px; /* Khoảng cách giữa phần thông tin và bảng */
    }

        /* Định dạng phần tiêu đề của bảng */
        .product-details-table thead th {
            background-color: #007bff; /* Màu nền */
            color: #fff; /* Màu chữ */
            font-weight: bold; /* Đậm */
        }

        /* Định dạng các ô dữ liệu của bảng */
        .product-details-table tbody td {
            vertical-align: middle; /* Căn giữa dọc */
        }

        /* Định dạng các dòng trong bảng */
        .product-details-table tbody tr:nth-child(even) {
            background-color: #f2f2f2; /* Màu nền xen kẽ */
        }

    /* Định dạng nút chi tiết */
    .btn-details {
        color: #007bff; /* Màu chữ */
        background-color: transparent; /* Màu nền trong suốt */
        border: none; /* Loại bỏ đường viền */
        cursor: pointer; /* Con trỏ chuột chỉ */
    }

        /* Định dạng nút chi tiết khi rê chuột qua */
        .btn-details:hover {
            text-decoration: underline; /* Gạch chân */
        }

</style>
<div class="app-title">
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item">Danh sách đơn hàng</li>
        <li class="breadcrumb-item"><a href="#">Thêm đơn hàng</a></li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <h3 class="tile-title">Tạo mới đơn hàng</h3>
            <div class="tile-body">
                <form class="row">
                    <div class="form-group  col-md-4">
                        <label class="control-label">Tên khách hàng</label>
                        <input class="form-control" type="text">
                    </div>
                    <div class="form-group  col-md-4">
                        <label class="control-label">Số điện thoại khách hàng</label>
                        <input class="form-control" type="number">
                    </div>
                    <div class="form-group  col-md-4">
                        <label class="control-label">Địa chỉ khách hàng</label>
                        <input class="form-control" type="text">
                    </div>
                    <div class="form-group  col-md-4">
                        <label class="control-label">Tên người bán</label>
                        <input class="form-control" type="text">
                    </div>
                    <div class="form-group  col-md-4">
                        <label class="control-label">Số hiệu người bán</label>
                        <input class="form-control" type="text">
                    </div>
                    <div class="form-group  col-md-4">
                        <label class="control-label">Ngày làm đơn hàng</label>
                        <input class="form-control" type="date">
                    </div>
                    <div class="form-group  col-md-4">
                        <label class="control-label">Tên sản phẩm cần bán</label>
                        <input class="form-control" type="text">
                    </div>
                    <div class="form-group  col-md-4">
                        <label class="control-label">Mã sản phẩm</label>
                        <input class="form-control" type="text">
                    </div>
                    <div class="form-group  col-md-4">
                        <label class="control-label">Số lượng</label>
                        <input class="form-control" type="number">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="exampleSelect1" class="control-label">Tình trạng</label>
                        <select class="form-control" id="exampleSelect1">
                            <option>-- Chọn tình trạng --</option>
                            <option>Đã xử lý</option>
                            <option>Đang chờ</option>
                            <option>Đã hủy</option>
                        </select>
                    </div>
                    <div class="form-group  col-md-4">
                        <label class="control-label">Ghi chú đơn hàng</label>
                        <textarea class="form-control" rows="4"></textarea>
                    </div>
                </form>
            </div>
            <button class="btn btn-save" type="button">Lưu lại</button>
            <a class="btn btn-cancel" href="/doc/table-data-oder.html">Hủy bỏ</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="tile">
            <h3 class="tile-title">Sản phẩm có trong cửa hàng</h3>
            <div class="tile-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th><input type="checkbox" id="selectAll"></th>
                            <th style="text-align:center">Hình ảnh</th>
                            <th style="text-align:center">Mã</th>
                            <th style="text-align:center">Tên</th>
                            <th style="text-align:center">Giá</th>
                            <th style="text-align:center">Tồn kho</th>
                            <th style="text-align:center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><input type="checkbox" class="select-product" data-id="IDProduct"></td>
                            <td><img src="ImageUrl" alt="Hình ảnh" width="50"></td>
                            <td>ABC</td>
                            <td>Quần Jean</td>
                            <td>100.000đ</td>
                            <td>1232</td>
                            <td>
                                <div class="row">
                                    <div class="col-md-6">
                                        <button class="btn btn-primary btn-select">Chọn Options</button>
                                    </div>
                                    <div class="col-md-6">
                                        <button class="btn btn-info btn-view">Xem chi tiết</button>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Khung hiển thị sản phẩm đã chọn -->
    <div class="col-md-6">
        <div class="tile">
            <h3 class="tile-title">Sản phẩm đã chọn</h3>
            <div class="tile-body">
                <table class="table" id="selectedProductsTable">
                    <thead>
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Mã sản phẩm</th>
                            <th>Phân loại</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sản phẩm đã chọn sẽ được thêm vào đây -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal xem chi tiết sản phẩm -->
<div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog custom-modal-auto" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Chi tiết sản phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        <!-- Thêm hình ảnh vào đây -->
                        <img src="~/images/datnt.jpg" alt="Hình ảnh sản phẩm" class="img-fluid">
                    </div>
                    <div class="col-md-4">
                        <p><strong>Mã sản phẩm:</strong> <span id="modalKeyCode"></span></p>
                        <p><strong>Tên sản phẩm:</strong> <span id="modalProductName"></span></p>
                        <p><strong>Tên nhà sản xuất:</strong> <span id="modalManufacturers"></span></p>
                        <p><strong>Tên chất liệu:</strong> <span id="modalMaterial"></span></p>
                        <p><strong>Tên thương hiệu:</strong> <span id="modalBrand"></span></p>
                        <p><strong>Tên danh mục:</strong> <span id="modalCategory"></span></p>
                        <p><strong>Mô tả:</strong> <span id="modalDescription"></span></p>
                        <p><strong>Style:</strong> <span id="modalStyle"></span></p>
                        <p><strong>Nguồn gốc:</strong> <span id="modalOrigin"></span></p>
                        <p><strong>Tổng số lượng:</strong> <span id="modalTotalQuantity"></span></p>
                        <p><strong>Trạng thái:</strong> <span id="modalStatus"></span></p>
                    </div>
                    <div class="col-md-4">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Size</th>
                                    <th>Màu</th>
                                    <th>Số lượng tồn</th>
                                    <th>Giá bán</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody id="productDetailsBody">
                                <!-- Các dòng sẽ được thêm thông qua JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
