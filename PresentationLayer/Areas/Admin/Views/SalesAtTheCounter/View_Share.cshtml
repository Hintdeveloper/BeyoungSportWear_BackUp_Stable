<style>
    .option-item {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

        .option-item img {
            margin-right: 10px;
        }

    .loader {
        border: 4px solid rgba(0, 0, 0, 0.1);
        border-top: 4px solid #007bff;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        animation: spin 1s linear infinite;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 1000;
        display: none;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .table-wrapper {
        display: flex;
        flex-direction: column;
        width: 100%;
        padding: 20px;
        box-sizing: border-box;
        background-color: white;
        border: 0px solid #ddd;
        border-radius: 5px;
    }

    .form-container {
        display: flex;
        flex-direction: column;
        margin-bottom: 20px;
    }

        .form-container select,
        .form-container input {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

    #shippingMethod {
        width: 100%; /* Độ rộng của select theo phần tử cha */
        padding: 8px; /* Padding bên trong select */
        font-size: 14px; /* Kích thước chữ */
        border: 1px solid #ccc; /* Viền ngoài */
        border-radius: 4px; /* Độ cong của các góc */
        background-color: #fff; /* Màu nền */
        cursor: pointer; /* Con trỏ khi hover */
    }

        /* CSS cho các tùy chọn lựa chọn */
        #shippingMethod option {
            padding: 5px; /* Padding bên trong tùy chọn */
        }

        /* CSS cho phần nút dropdown */
        #shippingMethod::-ms-expand {
            display: none; /* Ẩn mũi tên dropdown trên IE 10 và IE 11 */
        }

        /* CSS cho phần viền và hover */
        #shippingMethod:focus,
        #shippingMethod:hover {
            border-color: #66afe9; /* Màu viền khi hover */
            outline: 0; /* Loại bỏ viền khi focus */
        }

    #shippingMethod {
        /* Thiết lập CSS cho select box */
        width: 100%;
        padding: 8px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

        /* Thiết lập CSS cho các option trong select */
        #shippingMethod option {
            font-size: 16px;
        }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

        .header #invoiceNumberDisplay {
            font-size: 18px;
            font-weight: bold;
        }

        .header .btn {
            margin-left: auto;
        }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .modal-content {
        margin: 15% auto;
        padding: 0px;
        border: 1px solid #888;
        width: 100%;
        max-width: 500px;
        position: relative;
    }

    .close-button {
        position: absolute;
        top: 0px;
        right: 0px;
        color: #000;
        font-size: 35px;
        font-weight: bold;
    }

    .image-container {
        text-align: center;
        margin-top: 20px;
    }

        .image-container img {
            max-width: 100%;
            height: auto;
        }

    #camera video {
        transform: rotateY(180deg); /* Rotate to correct orientation */
    }

</style>
